# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# TENSORZERO CONFIGURATION
# -----------------------------------------------------------------------------
# TensorZero Gateway URL (internal Docker network)
TENSORZERO_BASE_URL=http://tensorzero:3000

# ClickHouse for metrics and observability
TENSORZERO_CLICKHOUSE_URL=http://clickhouse:8123/tensorzero
CLICKHOUSE_PASSWORD=tensorzero_ch_secret

# Postgres for full observability (optional)
DATABASE_URL=postgresql://postgres:tensorzero_pg_secret@postgres:5432/tensorzero
POSTGRES_PASSWORD=tensorzero_pg_secret

# -----------------------------------------------------------------------------
# LLM PROVIDER API KEYS
# -----------------------------------------------------------------------------
# Fast inference providers (sub-10s responses)
CEREBRAS_API_KEY=your_cerebras_api_key
GROQ_API_KEY=your_groq_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# Heavy reasoning providers (complex analysis)
SAMBANOVA_API_KEY=your_sambanova_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
MISTRAL_API_KEY=your_mistral_api_key

# Creative providers (prompt enhancement, image generation)
GEMINI_API_KEY=your_gemini_api_key
GROK_API_KEY=your_grok_api_key
TOGETHER_API_KEY=your_together_api_key

# Advanced evaluation (vision capabilities)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Proprietary / Creative Models
OPENAI_API_KEY=your_openai_api_key

# -----------------------------------------------------------------------------
# MEDIA SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# The URL where image/audio gen services live
MEDIA_SERVER_URL=https://2281a5a294754c19f8c9e2df0be013fb-bobby-casper-4235.aiagentsaz.com
IMAGE_AUTH=Bearer 80408040

# -----------------------------------------------------------------------------
# INFRASTRUCTURE CONFIGURATION
# -----------------------------------------------------------------------------
# Redis for job queuing and caching
REDIS_URL=redis://redis:6379

# ClickHouse for analytics queries
CLICKHOUSE_URL=http://clickhouse:8123/tensorzero

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------
# Ngrok for external access (development only)
NGROK_AUTHTOKEN=your_ngrok_token

# Cloudinary for image hosting (if not using Media Server)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed metrics collection
ENABLE_METRICS=true

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT secret for API authentication (optional)
JWT_SECRET=your_jwt_secret_key

# -----------------------------------------------------------------------------
# PERFORMANCE TUNING
# -----------------------------------------------------------------------------
# Worker concurrency
MAX_WORKERS=4

# Job timeout (seconds)
JOB_TIMEOUT=1800

# Cache TTL (seconds)
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable A/B testing
ENABLE_EXPERIMENTATION=true

# Enable quality feedback loop
ENABLE_QUALITY_LOOP=true

# Enable cost optimization
ENABLE_COST_OPTIMIZATION=true