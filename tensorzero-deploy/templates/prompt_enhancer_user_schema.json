{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["scenes"],
  "properties": {
    "scenes": {
      "type": "array",
      "description": "List of scenes with visual descriptions to enhance",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["visual_desc"],
        "properties": {
          "visual_desc": {
            "type": "string",
            "description": "Basic visual description for the scene",
            "minLength": 10,
            "maxLength": 500
          }
        }
      }
    }
  },
  "additionalProperties": false
}
